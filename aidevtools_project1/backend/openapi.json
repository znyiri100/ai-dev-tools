              }
            ],
            "title": "Author"
          },
          "view_count": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "View Count"
          },
          "duration": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Duration"
          }
        },
        "type": "object",
        "required": [
          "title",
          "description",
          "author",
          "view_count",
          "duration"
        ],
        "title": "VideoMetadata"
      },
      "VideoResponse": {
        "properties": {
          "video_id": {
            "type": "string",
            "title": "Video Id"
          },
          "url": {
            "type": "string",
            "title": "Url"
          },
          "metadata": {
            "$ref": "#/components/schemas/VideoMetadata"
          },
          "transcripts": {
            "items": {
              "$ref": "#/components/schemas/TranscriptInfo"
            },
            "type": "array",
            "title": "Transcripts"
          }
        },
        "type": "object",
        "required": [
          "video_id",
          "url",
          "metadata",
          "transcripts"
        ],
        "title": "VideoResponse"
      }
    }
  }
}